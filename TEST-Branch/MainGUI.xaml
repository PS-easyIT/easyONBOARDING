                                Margin="5"
                                Background="#FFFBFBFB"
                                Header="Create New Page">
                                <StackPanel Margin="5">
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Text="Space:" />
                                        <ComboBox
                                            x:Name="cmbConfluenceSpace"
                                            Grid.Column="1"
                                            Margin="47,5,0,5" />
                                    </Grid>

                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Text="Title:" />
                                        <TextBox
                                            x:Name="txtConfluenceTitle"
                                            Grid.Column="1"
                                            Margin="54,5,0,5" />
                                    </Grid>

                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="0,5,5,0"
                                            VerticalAlignment="Top"
                                            Text="Content:" />
                                        <TextBox
                                            x:Name="txtConfluenceContent"
                                            Grid.Column="1"
                                            Height="80"
                                            Margin="34,5,0,5"
                                            AcceptsReturn="True"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto" />
                                    </Grid>

                                    <Button
                                        x:Name="btnCreateConfluencePage"
                                        Width="385"
                                        Height="30"
                                        Margin="5"
                                        Background="LightGreen"
                                        Content="Create Page" />
                                </StackPanel>
                            </GroupBox>
                            <Border Height="60" Background="Transparent" />
                            <!--  Existing Page Section  -->
                            <GroupBox
                                Height="105"
                                Margin="5"
                                Background="#FFFBFBFB"
                                Header="Existing Page">
                                <StackPanel Margin="5">
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Text="Page ID:" />
                                        <TextBox
                                            x:Name="txtConfluencePageId"
                                            Grid.Column="1"
                                            Margin="33,5,5,5" />
                                        <Button
                                            x:Name="btnLookupConfluencePage"
                                            Grid.Column="2"
                                            Width="80"
                                            Height="30"
                                            Content="Look Up" />
                                    </Grid>

                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            Text="Status:" />
                                        <TextBox
                                            x:Name="txtConfluenceStatus"
                                            Grid.Column="1"
                                            Margin="41,5,5,5"
                                            IsReadOnly="True" />
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!--  Tab 5: INI Editor mit Icon und verbesserten Stilen  -->
            <TabItem x:Name="Tab_INIEditor" Header="INI Editor">
                <Grid Height="694" Background="#FFE8E8E8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  ListView und DataGrid mit konsistenten Stilen  -->
                    <ListView
                        x:Name="listViewINIEditor"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5,5,342,5"
                        SelectionMode="Single"
                        Style="{StaticResource ListViewStyle}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="250"
                                    DisplayMemberBinding="{Binding SectionName}"
                                    Header="Abschnitt" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <DataGrid
                        x:Name="dataGridINIEditor"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="321,5,5,5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Key}"
                                Header="Key" />
                            <DataGridTextColumn
                                Width="225"
                                Binding="{Binding Value}"
                                Header="Value" />
                            <DataGridTextColumn
                                Width="500"
                                Binding="{Binding Comment}"
                                Header="Comment"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--  Buttons mit konsistenten Stilen  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="295"
                        Margin="5,5,0,5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnINIEditorSaveChanges"
                            Background="LightGreen"
                            Content="Save Changes"
                            Style="{StaticResource StandardButton}" />
                        <Button
                            x:Name="btnINIEditorInfo"
                            Background="LightBlue"
                            Content="Info"
                            Style="{StaticResource StandardButton}" />
                        <Button
                            x:Name="btnINIEditorClose"
                            Width="118"
                            Background="LightCoral"
                            Content="Close"
                            Style="{StaticResource StandardButton}" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Footer Section mit fester HÃ¶he und verbesserten Stilen  -->
        <Border
            Grid.Row="1"
            Background="{Binding FooterBackgroundColor}"
            BorderBrush="{Binding FooterBorderColor}"
            BorderThickness="0,1,0,0">
            <TextBlock
                x:Name="txtFooter"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{Binding FontFamily}"
                FontSize="{Binding FooterFontSize}"
                Foreground="{Binding FooterTextColor}"
                Text="{Binding FooterText}" />
        </Border>
    </Grid>
</Window>