                                                                                 Margin="0,0,10,0">
                                                                            <ComboBox.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <StackPanel>
                                                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                                                        <TextBlock Text="{Binding TypeDisplay}" FontSize="10" Foreground="#666666"/>
                                                                                    </StackPanel>
                                                                                </DataTemplate>
                                                                            </ComboBox.ItemTemplate>
                                                                        </ComboBox>
                                                                        
                                                                        <Button Grid.Column="1" Name="btnAddGroup" Content="Hinzufügen" 
                                                                               Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                                                                        
                                                                        <Button Grid.Column="2" Name="btnMappedRefreshGroups" Content="🔄" 
                                                                               Style="{StaticResource ModernButton}" Padding="8"/>
                                                                    </Grid>
                                                                    
                                                                    <!-- Zugewiesene Gruppen Liste -->
                                                                    <DataGrid Name="dgMappedGroups" Height="200" AutoGenerateColumns="False"
                                                                             CanUserAddRows="False" CanUserDeleteRows="False" 
                                                                             GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                                                                        <DataGrid.Columns>
                                                                            <DataGridTextColumn Header="Gruppenname" Binding="{Binding Name}" Width="200"/>
                                                                            <DataGridTextColumn Header="Typ" Binding="{Binding TypeDisplay}" Width="120"/>
                                                                            <DataGridTextColumn Header="Beschreibung" Binding="{Binding Description}" Width="*"/>
                                                                            <DataGridTemplateColumn Header="Aktion" Width="80">
                                                                                <DataGridTemplateColumn.CellTemplate>
                                                                                    <DataTemplate>
                                                                                        <Button Content="Entfernen" FontSize="10" Padding="5,2" 
                                                                                               Click="RemoveGroupMapping_Click" 
                                                                                               Tag="{Binding Name}"/>
                                                                                    </DataTemplate>
                                                                                </DataGridTemplateColumn.CellTemplate>
                                                                            </DataGridTemplateColumn>
                                                                        </DataGrid.Columns>
                                                                    </DataGrid>
                                                                </StackPanel>
                                                            </GroupBox>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                                
                                                <!-- Speichern-Buttons -->
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                                    <Button Name="btnResetGroupMappings" Content="Auf Standard zurücksetzen" 
                                                           Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                                                    <Button Name="btnSaveGroupMappings" Content="💾 Speichern" 
                                                           Style="{StaticResource ModernButton}" Background="#107C10"/>
                                                </StackPanel>
                                            </Grid>
                                        </TabItem>
                                        
                                        <!-- Allgemeine Einstellungen Tab -->
                                        <TabItem Header="⚙️ Allgemeine Einstellungen" FontSize="14" Padding="15,8">
                                            <Grid Margin="20">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <TextBlock Grid.Row="0" Text="Allgemeine Anwendungseinstellungen" 
                                                          FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                                
                                                <StackPanel Grid.Row="1">
                                                    <!-- Domain-Einstellungen -->
                                                    <GroupBox Header="Active Directory-Einstellungen" Margin="0,0,0,20">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Domain Controller:" 
                                                                      VerticalAlignment="Center" Margin="0,5"/>
                                                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtDomainController" 
                                                                    Style="{StaticResource ModernTextBox}" Margin="10,5"/>
                                                            <Button Grid.Row="0" Grid.Column="2" Name="btnTestConnection" 
                                                                   Content="Test" Style="{StaticResource ModernButton}" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Standard-Domain:" 
                                                                      VerticalAlignment="Center" Margin="0,5"/>
                                                            <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbDefaultDomain" 
                                                                     Style="{StaticResource ModernComboBox}" Margin="10,5"/>
                                                            
                                                            <CheckBox Grid.Row="2" Grid.ColumnSpan="3" Name="chkAutoConnect" 
                                                                     Content="Automatisch beim Start verbinden" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,10"/>
                                                        </Grid>
                                                    </GroupBox>
                                                    
                                                    <!-- Passwort-Einstellungen -->
                                                    <GroupBox Header="Passwort-Generierung" Margin="0,0,0,20">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Standard-Länge:" 
                                                                      VerticalAlignment="Center" Margin="0,5"/>
                                                            <Slider Grid.Row="0" Grid.Column="1" Name="sliderPasswordLength" 
                                                                   Minimum="8" Maximum="32" Value="14" 
                                                                   TickFrequency="2" IsSnapToTickEnabled="True" Margin="10,5"/>
                                                            
                                                            <CheckBox Grid.Row="1" Grid.ColumnSpan="2" Name="chkDefaultSpecialChars" 
                                                                     Content="Sonderzeichen standardmäßig verwenden" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,5"/>
                                                            
                                                            <CheckBox Grid.Row="2" Grid.ColumnSpan="2" Name="chkDefaultAvoidAmbiguous" 
                                                                     Content="Mehrdeutige Zeichen standardmäßig vermeiden" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,5"/>
                                                            
                                                            <CheckBox Grid.Row="3" Grid.ColumnSpan="2" Name="chkForcePasswordChange" 
                                                                     Content="Passwort-Änderung bei erster Anmeldung erzwingen" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,5"/>
                                                        </Grid>
                                                    </GroupBox>
                                                    
                                                    <!-- Logging-Einstellungen -->
                                                    <GroupBox Header="Protokollierung">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="150"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Log-Verzeichnis:" 
                                                                      VerticalAlignment="Center" Margin="0,5"/>
                                                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtLogDirectory" 
                                                                    Style="{StaticResource ModernTextBox}" Margin="10,5"/>
                                                            <Button Grid.Row="0" Grid.Column="2" Name="btnBrowseLogDir" 
                                                                   Content="📁" Style="{StaticResource ModernButton}" 
                                                                   Padding="8" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Log-Level:" 
                                                                      VerticalAlignment="Center" Margin="0,5"/>
                                                            <ComboBox Grid.Row="1" Grid.Column="1" Name="cmbLogLevel" 
                                                                     Style="{StaticResource ModernComboBox}" Margin="10,5">
                                                                <ComboBoxItem Content="INFO"/>
                                                                <ComboBoxItem Content="DEBUG"/>
                                                                <ComboBoxItem Content="WARN"/>
                                                                <ComboBoxItem Content="ERROR"/>
                                                            </ComboBox>
                                                            
                                                            <CheckBox Grid.Row="2" Grid.ColumnSpan="3" Name="chkDebugMode" 
                                                                     Content="Debug-Modus aktiviert" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,10"/>
                                                            
                                                            <CheckBox Grid.Row="3" Grid.ColumnSpan="3" Name="chkConsoleOutput" 
                                                                     Content="Zusätzliche Konsolen-Ausgabe" 
                                                                     Style="{StaticResource ModernCheckBox}" Margin="0,5"/>
                                                        </Grid>
                                                    </GroupBox>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                                    <Button Name="btnResetSettings" Content="Auf Standard zurücksetzen" 
                                                           Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                                                    <Button Name="btnSaveSettings" Content="💾 Speichern" 
                                                           Style="{StaticResource ModernButton}" Background="#107C10"/>
                                                </StackPanel>
                                            </Grid>
                                        </TabItem>
                                        
                                        <!-- System-Info Tab -->
                                        <TabItem Header="ℹ️ System-Information" FontSize="14" Padding="15,8">
                                            <Grid Margin="20">
                                                <StackPanel>
                                                    <TextBlock Text="System-Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                                    
                                                    <GroupBox Header="Anwendungsinformationen" Margin="0,0,0,20">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="200"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,5"/>
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="easyONBOARDING v1.4.XX" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="PowerShell-Version:" FontWeight="SemiBold" Margin="0,5"/>
                                                            <TextBlock Grid.Row="1" Grid.Column="1" Name="lblPSVersion" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Betriebssystem:" FontWeight="SemiBold" Margin="0,5"/>
                                                            <TextBlock Grid.Row="2" Grid.Column="1" Name="lblOSVersion" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Benutzer:" FontWeight="SemiBold" Margin="0,5"/>
                                                            <TextBlock Grid.Row="3" Grid.Column="1" Name="lblCurrentUser" Margin="10,5"/>
                                                            
                                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Administrator-Rechte:" FontWeight="SemiBold" Margin="0,5"/>
                                                            <TextBlock Grid.Row="4" Grid.Column="1" Name="lblAdminRights" Margin="10,5"/>
                                                        </Grid>
                                                    </GroupBox>
                                                    
                                                    <GroupBox Header="Module-Status">
                                                        <DataGrid Name="dgModuleStatus" Height="200" AutoGenerateColumns="False"
                                                                 CanUserAddRows="False" CanUserDeleteRows="False"
                                                                 GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                                                            <DataGrid.Columns>
                                                                <DataGridTextColumn Header="Modul" Binding="{Binding Name}" Width="200"/>
                                                                <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                                                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                                                <DataGridTextColumn Header="Beschreibung" Binding="{Binding Description}" Width="*"/>
                                                            </DataGrid.Columns>
                                                        </DataGrid>
                                                    </GroupBox>
                                                </StackPanel>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#142831" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="easyONBOARDING" 
                          VerticalAlignment="Center" FontSize="11" Foreground="#e2e2e2"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Copyright 2025 @" FontSize="11" Foreground="#e2e2e2" Margin="0,0,5,0"/>
                    <TextBlock Text="by IT Team" FontSize="11" Foreground="#e2e2e2" Margin="0,0,35,0"/>
                    <TextBlock Text="https://easy-it.phinit.de" FontSize="11" Foreground="#d0e8ff" Cursor="Hand"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="Script Version: 1.4.XX - Last Update: 2025-07-08" 
                          HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11" Foreground="#e2e2e2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
