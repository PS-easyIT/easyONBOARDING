<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding APPName}"
        Height="1000" Width="1420" MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF" 
        FontFamily="Segoe UI"
        FontSize="12">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#357ABD"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="8,3,8,3"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60A0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/> 
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#BFBFBF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#BFBFBF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#202020"/>
        </Style>

        <!-- RadioButton Style -->
        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#202020"/>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#1C1C1C"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="#0078D4"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9E9E9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#142831" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="easyONBOARDING - IT User Management Tool" 
                              FontSize="20" FontWeight="SemiBold" 
                              Foreground="#e2e2e2" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Settings Button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="btnHeaderSettings" Content="⚙ Settings" 
                           Background="Transparent" Foreground="#e2e2e2" BorderThickness="0"
                           Padding="10,5" FontSize="12" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#2B3E50" BorderBrush="#1E2A38" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,10">
                    <!-- User Info -->
                    <GroupBox Header="Angemeldeter Benutzer"
                              Foreground="#E0E0E0"
                              BorderBrush="#4A5C6E" BorderThickness="1"
                              Margin="5,8,5,8"
                              Padding="8">
                        <StackPanel>
                            <TextBlock Text="$($env:USERNAME)"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFF"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="12"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- AD Connection Section -->
                    <GroupBox Header="Active Directory" 
                              Foreground="#E0E0E0" 
                              BorderBrush="#4A5C6E" BorderThickness="1" 
                              Margin="5,10,5,25" 
                              Padding="8">
                        <StackPanel>
                            <!-- Domain Controller Input -->
                            <TextBox Name="txtServerConnection" Style="{StaticResource ModernTextBox}" 
                                     Text="autodiscover" 
                                     Background="#1E2A38" Foreground="#FFFFFF" BorderBrush="#4A5C6E" 
                                     Padding="5,4" FontSize="12" MaxHeight="35" Margin="0,0,0,8"/>

                            <!-- Connect Button -->
                            <Button Name="btnConnect" Content="Connect to AD" Style="{StaticResource ModernButton}" 
                                    HorizontalAlignment="Stretch" 
                                    Margin="0,0,0,8" MaxHeight="28" Padding="8,4" FontSize="12"/>
                            
                            <!-- Status -->
                            <TextBlock Name="lblConnectionStatus" Text="Status: Ready" Foreground="#107C10" FontWeight="SemiBold" 
                                       VerticalAlignment="Center" HorizontalAlignment="Left" 
                                       Margin="0,0,0,0" FontSize="11"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Separator -->
                    <Border Height="1" Background="#4A5C6E" Margin="16,0,16,25" Opacity="0.5"/>
                    
                    <!-- Navigation Header -->
                    <TextBlock Text="Navigation" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" 
                              Margin="16,0,16,12" HorizontalAlignment="Center"/>

                    <!-- Navigation Buttons -->
                    <Button Name="btnDashboard" Content="📊 Dashboard" Style="{StaticResource NavButton}" Tag="dashboard"/>
                    <Button Name="btnOnboarding" Content="👤 User Onboarding" Style="{StaticResource NavButton}" Tag="onboarding"/>
                    <Button Name="btnUserUpdate" Content="✏️ User Update" Style="{StaticResource NavButton}" Tag="userupdate"/>
                    <Button Name="btnCSVImport" Content="📂 CSV Import" Style="{StaticResource NavButton}" Tag="csvimport"/>
                    <Button Name="btnReports" Content="📋 Reports" Style="{StaticResource NavButton}" Tag="reports"/>
                    <Button Name="btnTools" Content="🔧 Tools" Style="{StaticResource NavButton}" Tag="tools"/>
                    <Button Name="btnSettings" Content="⚙️ Settings" Style="{StaticResource NavButton}" Tag="settings"/>
                </StackPanel>
            </Border>

            <!-- Content Panel -->
            <Border Grid.Column="1" Background="#FFFFFF" Padding="20">
                <ScrollViewer Name="contentScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Name="contentGrid">
                        <!-- Dashboard Panel -->
                        <StackPanel Name="dashboardPanel" Visibility="Visible" Width="1150" HorizontalAlignment="Center">
                            <TextBlock Text="IT User Onboarding Dashboard" FontSize="24" FontWeight="SemiBold" 
                                      Foreground="#1C1C1C" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Quick Statistics -->
                                <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- System Information -->
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="System Information" FontSize="16" FontWeight="SemiBold" 
                                                    Foreground="#1C1C1C" Margin="0,0,0,12"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Domain Controller:" FontWeight="SemiBold" 
                                                        Foreground="#505050" Margin="0,0,10,4"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" Name="lblDC" Text="Loading..." 
                                                        Foreground="#1C1C1C" Margin="0,0,0,4"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Domain:" FontWeight="SemiBold" 
                                                        Foreground="#505050" Margin="0,0,10,4"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" Name="lblDomain" Text="Loading..." 
                                                        Foreground="#1C1C1C" Margin="0,0,0,4"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Connection Status:" FontWeight="SemiBold" 
                                                        Foreground="#505050" Margin="0,0,10,4"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" Name="lblADStatus" Text="Not Connected" 
                                                        Foreground="#E81123" Margin="0,0,0,4"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Action:" FontWeight="SemiBold" 
                                                        Foreground="#505050" Margin="0,0,10,4"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" Name="lblLastAction" Text="None" 
                                                        Foreground="#1C1C1C" Margin="0,0,0,4"/>
                                            </Grid>
                                        </StackPanel>
                                    
                                        <!-- Quick Actions -->
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Foreground="#1C1C1C" Margin="0,0,0,12"/>
                                            <Button Name="btnQuickOnboard" Content="🚀 Quick User Onboard" Style="{StaticResource ModernButton}" 
                                                   HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                            <Button Name="btnQuickSearch" Content="🔍 Search Users" Style="{StaticResource ModernButton}" 
                                                   HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                            <Button Name="btnViewLogs" Content="📋 View Activity Logs" Style="{StaticResource ModernButton}" 
                                                   HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- About and Features Information -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65*"/>
                                        <ColumnDefinition Width="35*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                                        <StackPanel>
                                            <TextBlock Text="About easyONBOARDING" FontSize="16" FontWeight="SemiBold" Foreground="#1C1C1C" Margin="0,0,0,12"/>
                                            <TextBlock TextWrapping="Wrap" Foreground="#505050" LineHeight="18">
                                                <Run Text="easyONBOARDING ist ein speziell für IT-Administratoren entwickeltes Tool zur Vereinfachung und Automatisierung des User-Onboarding-Prozesses in Active Directory-Umgebungen."/>
                                                <LineBreak/><LineBreak/>
                                                <Run Text="Features:" FontWeight="SemiBold"/><LineBreak/>
                                                <Run Text="• Benutzeranlage mit automatischer Gruppenzuweisung"/>
                                                <LineBreak/>
                                                <Run Text="• Passwort-Generator mit konfigurierbaren Regeln"/>
                                                <LineBreak/>
                                                <Run Text="• CSV-Import für Bulk-Operationen"/>
                                                <LineBreak/>
                                                <Run Text="• Automatische E-Mail-Adressgenerierung"/>
                                                <LineBreak/>
                                                <Run Text="• Umfassende Reporting-Funktionen"/>
                                                <LineBreak/>
                                                <Run Text="• Benutzer-Update und -Management"/>
                                                <LineBreak/>
                                                <Run Text="• Integrierte Tools für IT-Administration"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Style="{StaticResource Card}" Margin="10,0,0,0">
                                        <StackPanel VerticalAlignment="Top">
                                            <TextBlock Text="Version Information" FontSize="16" FontWeight="SemiBold" Foreground="#1C1C1C" Margin="0,0,0,12"/>
                                            <TextBlock Foreground="#505050" Margin="0,0,0,10">
                                                <Run Text="Version: "/>
                                                <Run Text="1.4.XX" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#505050" Margin="0,0,0,4">
                                                <Run Text="Author: "/>
                                                <Run Text="IT Team" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#505050" Margin="0,0,0,10">
                                                <Run Text="Last Update: "/>
                                                <Run Text="2025-07-08" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#505050" Margin="0,0,0,4">
                                                <Run Text="Website: "/>
                                                <Run Text="https://easy-it.phinit.de" Foreground="#0078D4" Cursor="Hand" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </StackPanel>

                        <!-- User Onboarding Panel -->
                        <Grid Name="onboardingPanel" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Panel: User Input Form -->
                            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <TextBlock Text="Neuen Benutzer anlegen" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                                        <!-- OU Selection -->
                                        <GroupBox Header="Organisationseinheit" Margin="0,0,0,15">
                                            <StackPanel>
                                                <ComboBox Name="cmbOU" Style="{StaticResource ModernComboBox}" 
                                                         HorizontalAlignment="Stretch" Margin="0,5,0,5"/>
                                                <Button Name="btnRefreshOU" Content="🔄 OU aktualisieren" 
                                                       Style="{StaticResource ModernButton}" HorizontalAlignment="Stretch"/>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- Basic Information -->
                                        <GroupBox Header="Basis-Informationen" Margin="0,0,0,15">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Vorname *:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                                                <TextBox Grid.Row="0" Grid.Column="1" Name="txtFirstName" Style="{StaticResource ModernTextBox}" Margin="0,5,0,5"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nachname *:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                                                <TextBox Grid.Row="1" Grid.Column="1" Name="txtLastName" Style="{StaticResource ModernTextBox}" Margin="0,5,0,5"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Anzeigename:" Margin="0,5,10,5" VerticalAlignment="Center"/>
                                                <TextBox Grid.Row="2" Grid.Column="1" Name="txtDisplayName" Style="{StaticResource ModernTextBox}" Margin="0,5,0,5"/>

                                                <CheckBox Grid.Row="3" Grid.ColumnSpan="2" Name="chkExternal" Content="Externer Mitarbeiter" 
                                                         Style="{StaticResource ModernCheckBox}" Margin="0,10,0,0"/>
                                            </Grid>
                                        </GroupBox>

                                        <!-- Account Settings -->
                                        <GroupBox Header="Account-Einstellungen" Margin="0,0,0,15">
                                            <StackPanel>
                                                <Grid Margin="0,5,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <RadioButton Grid.Column="0" Name="rbAccountEnabled" Content="Account aktiviert" 
                                                                GroupName="AccountStatus" IsChecked="True" Margin="5"/>
                                                    <RadioButton Grid.Column="1" Name="rbAccountDisabled" Content="Account deaktiviert" 
                                                                GroupName="AccountStatus" Margin="5"/>
                                                </Grid>

                                                <TextBlock Text="E-Mail Adresse:" Margin="0,5,0,0"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox Grid.Column="0" Name="txtEmail" Style="{StaticResource ModernTextBox}"/>
                                                    <ComboBox Grid.Column="1" Name="cmbEmailSuffix" Style="{StaticResource ModernComboBox}" Width="120"/>
                                                </Grid>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- Password Options -->
                                        <GroupBox Header="Passwort-Optionen" Margin="0,0,0,15">
                                            <StackPanel>
                                                <RadioButton Name="rbGeneratedPassword" Content="Generiertes Passwort" 
                                                           IsChecked="True" GroupName="PasswordOption" Margin="0,5"/>
                                                <StackPanel Name="generatedPasswordOptions" Margin="20,5,0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Länge:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBox Grid.Column="1" Name="txtPasswordLength" Text="14" Width="50" Style="{StaticResource ModernTextBox}"/>
                                                    </Grid>
                                                    <CheckBox Name="chkSpecialChars" Content="Sonderzeichen" IsChecked="True" Margin="0,5"/>
                                                    <CheckBox Name="chkAvoidAmbiguous" Content="Mehrdeutige Zeichen vermeiden" IsChecked="True" Margin="0,5"/>
                                                </StackPanel>

                                                <RadioButton Name="rbFixedPassword" Content="Festes Passwort" 
                                                           GroupName="PasswordOption" Margin="0,5"/>
                                                <TextBox Name="txtFixedPassword" Style="{StaticResource ModernTextBox}" 
                                                        IsEnabled="{Binding IsChecked, ElementName=rbFixedPassword}" Margin="20,5,0,0"/>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- Action Buttons -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                            <Button Name="btnCreateUser" Content="👤 Benutzer anlegen" Style="{StaticResource ModernButton}" Margin="5"/>
                                            <Button Name="btnClearForm" Content="🗑️ Formular leeren" Style="{StaticResource ModernButton}" Margin="5"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>

                            <!-- Middle Panel: Groups and Licenses -->
                            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="Gruppenzuweisungen and Lizenzen" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                                    <!-- Group Assignment -->
                                    <GroupBox Header="Gruppenzuweisungen" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                                <CheckBox Name="chkTeamLead" Content="Team Lead (TL)" Margin="0,0,20,0"/>
                                                <CheckBox Name="chkAreaLead" Content="Bereichsleiter (AL)" Margin="0,0,20,0"/>
                                            </StackPanel>

                                            <DataGrid Grid.Row="1" Name="dgGroups" Height="200" 
                                                     AutoGenerateColumns="False" CanUserAddRows="False">
                                                <DataGrid.Columns>
                                                    <DataGridCheckBoxColumn Header="Auswählen" Binding="{Binding IsSelected}" Width="70"/>
                                                    <DataGridTextColumn Header="Gruppenname" Binding="{Binding Name}" Width="*"/>
                                                    <DataGridTextColumn Header="Beschreibung" Binding="{Binding Description}" Width="200"/>
                                                </DataGrid.Columns>
                                            </DataGrid>

                                            <Button Grid.Row="2" Name="btnRefreshGroups" Content="🔄 Gruppen aktualisieren" 
                                                   Style="{StaticResource ModernButton}" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                                        </Grid>
                                    </GroupBox>

                                    <!-- License Assignment -->
                                    <GroupBox Header="Lizenzzuweisung">
                                        <StackPanel>
                                            <ComboBox Name="cmbLicenses" Style="{StaticResource ModernComboBox}" 
                                                     HorizontalAlignment="Stretch" Margin="0,5"/>
                                            <CheckBox Name="chkAutoLicense" Content="Automatische Lizenzzuweisung" 
                                                     Style="{StaticResource ModernCheckBox}" Margin="0,10"/>
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                            </Border>

                            <!-- Right Panel: Output and Status -->
                            <Border Grid.Column="2" Style="{StaticResource Card}" Margin="10,0,0,0">
                                <StackPanel>
