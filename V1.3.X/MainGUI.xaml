<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding APPName}"
    Width="1225"
    Height="800"
    Background="{Binding ThemeColor}">

    <!-- Define reusable styles with INI property bindings -->
    <Window.Resources>
        <Style x:Key="StandardButton" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Background" Value="{Binding BoxColor}" />
            <Setter Property="BorderBrush" Value="{Binding RahmenColor}" />
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource StandardButton}">
            <Setter Property="Width" Value="225" />
        </Style>

        <Style x:Key="StandardTextBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,5,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="{Binding FontFamily}" />
            <Setter Property="FontSize" Value="{Binding FontSize}" />
        </Style>

        <Style x:Key="StandardTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Background" Value="#FFFBFBFB" />
        </Style>

        <Style x:Key="TabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="DarkGray" />
        </Style>
    </Window.Resources>

    <!--  Hauptcontainer: Grid, der den TabControl-Bereich umschließt  -->
    <Grid Margin="0,0,0,37" Background="{Binding BackgroundImage}">
        <!--  TabControl mit allen Hauptfunktionen  -->
        <TabControl x:Name="MainTabControl" Style="{StaticResource TabControlStyle}" Margin="10,10,10,-28" Background="#FFE8E8E8">
            <!--  TAB 1: easyONBOARDING  -->
            <TabItem x:Name="Tab_Onboarding" Header="easyONBOARDING" Margin="-2,-2,-16,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <!--  Linkes Panel  -->
                        <ColumnDefinition Width="420" />
                        <!--  Mittleres Panel (Suffix _Onb)  -->
                        <ColumnDefinition Width="450" />
                        <!--  Rechtes Panel (Suffix _Onb2)  -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="700" />
                    </Grid.RowDefinitions>

                    <!--  Linkes Panel: Eingabeformular für Onboarding-Daten  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="5,5,5,-9">
                            <!--  OU Auswahl und Refresh  -->
                            <Grid Margin="5" Background="#FFFFF6E9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Select OU:" />
                                <ComboBox
                                    x:Name="cmbOU"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="50,0,53,0"
                                    VerticalAlignment="Center" Grid.ColumnSpan="2" />
                                <Button
                                    x:Name="btnRefreshOU"
                                    Grid.Column="2"
                                    Height="25"
                                    Margin="10,0,0,0"
                                    Content="Refresh" />
                            </Grid>
                            <!--  First Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="First Name *:" />
                                <TextBox
                                    x:Name="txtFirstName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Last Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Last Name *:" />
                                <TextBox
                                    x:Name="txtLastName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  External Employee Checkbox  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="External Employee:" />
                                <CheckBox
                                    x:Name="chkExternal"
                                    Grid.Column="1"
                                    Margin="2,0,0,0"
                                    VerticalAlignment="Center" />
                            </Grid>
                            <Separator Margin="5" />
                            <!--  Display Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Display Name:" />
                                <TextBox
                                    x:Name="txtDisplayName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  UPN Template Auswahl  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Template:" />
                                <ComboBox
                                    x:Name="cmbDisplayTemplate"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="51,0,0,0"
                                    VerticalAlignment="Center">
                                    <ComboBoxItem Content="Template1" />
                                    <ComboBoxItem Content="Template2" />
                                </ComboBox>
                            </Grid>
                            <!--  Description  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Description:" />
                                <TextBox
                                    x:Name="txtDescription"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Office  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Office:" />
                                <TextBox
                                    x:Name="txtOffice"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Phone  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Phone:" />
                                <TextBox
                                    x:Name="txtPhone"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Mobile  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Mobile:" />
                                <TextBox
                                    x:Name="txtMobile"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Position  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Position:" />
                                <TextBox
                                    x:Name="txtPosition"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Department  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Department:" />
                                <TextBox
                                    x:Name="txtDepartment"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Termination Date  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Termination Date:" />
                                <TextBox
                                    x:Name="txtTermination"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Hinweis  -->
                            <Border Height="20" Background="Transparent">
                                <TextBlock
                                    Width="268"
                                    Margin="103,-3,5,7"
                                    FontStyle="Italic"
                                    Text="Not effective when disabled!" />
                            </Border>

                            <!--  MS365 License Auswahl  -->
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                Text="-" />
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="MS365 License *:" />
                                <ComboBox
                                    x:Name="cmbLicense"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding LicenseListFromINI}"
                                    SelectedValuePath="Value" />
                            </Grid>
                            <Border Height="126" Background="Transparent" />
                            <!--  Team Leader & Department Head Einstellungen  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox
                                    x:Name="chkTL"
                                    Grid.Column="0"
                                    Margin="108,0,10,0"
                                    VerticalAlignment="Center"
                                    Content="Team Leader (TL)" />
                                <CheckBox
                                    x:Name="chkAL"
                                    Grid.Column="1"
                                    Margin="23,0,10,0"
                                    VerticalAlignment="Center"
                                    Content="Department Head (AL)" />
                            </Grid>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="TL Group:" />
                                <ComboBox
                                    x:Name="cmbTLGroup"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Value"
                                    ItemsSource="{Binding TLGroupOptions}"
                                    SelectedValuePath="Value" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Mittleres Panel: UPN Template, Email & AD Settings  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,10,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="10">
                            <StackPanel Margin="5" Orientation="Vertical">
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Text="UPN Template:" />
                                <!--  Eindeutiger Name für dieses Element  -->
                                <TextBlock
                                    x:Name="txtUPNTemplateDisplay"
                                    Width="302"
                                    MinWidth="200"
                                    Margin="5,-20,5,5"
                                    HorizontalAlignment="Right"
                                    Text="FIRSTNAME.LASTNAME@company.com" />
                                <Separator Margin="5,10,5,10" />
                            </StackPanel>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Email Address:" />
                                <!--  Eindeutiger Name  -->
                                <TextBox
                                    x:Name="txtEmail"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="41,0,0,0"
                                    VerticalAlignment="Center" />
                            </Grid>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}"
                                    Text="Mail Suffix:" />
                                <!--  Eindeutiger Name  -->
                                <ComboBox
                                    x:Name="cmbSuffix"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="60,0,0,0"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Value"
                                    ItemsSource="{Binding MailSuffixListFromINI}"
                                    SelectedValuePath="Key" />
                            </Grid>
                            <Separator Margin="5,10,5,10" />
                            <!--  AD User Account Settings  -->
                            <StackPanel
                                Margin="5"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <TextBlock FontWeight="Bold" Text="AD User Account Settings" />
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkAccountDisabled"
                                        Margin="5"
                                        Content="Account Disabled"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkPWNeverExpires"
                                        Margin="5"
                                        Content="Password Never Expires" />
                                </StackPanel>
                                <TextBlock
                                    Width="268"
                                    Height="16"
                                    Margin="-114,10,0,0"
                                    FontStyle="Italic"
                                    Text="Not effective when disabled!" />
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkSmartcardLogon"
                                        Margin="5"
                                        Content="Smartcard Logon" />
                                    <CheckBox
                                        x:Name="chkPreventPWChange"
                                        Margin="8,5,5,5"
                                        Content="Prevent Password Change" />
                                </StackPanel>
                                <CheckBox
                                    x:Name="chkPWChangeLogon"
                                    Margin="11,5,5,5"
                                    Content="Change Password at Logon" />
                            </StackPanel>
                            <Separator Margin="5,10,5,10" />
                            <!--  Password Options  -->
                            <StackPanel
                                Margin="5"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <TextBlock FontWeight="Bold" Text="Password Options" />
                                <StackPanel Margin="57,-14,5,5" Orientation="Horizontal">
                                    <RadioButton
                                        x:Name="rbFix"
                                        Margin="100,-1,1,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="FIXED" />
                                    <RadioButton
                                        x:Name="rbRand"
                                        Margin="13,-1,1,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="GENERATED"
                                        IsChecked="True" />
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Text="Fixed Password:" />
                                    <TextBox
                                        x:Name="txtFixPW"
                                        Width="291"
                                        Margin="5"
                                        IsEnabled="False" />
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5,2,5,5"
                                        VerticalAlignment="Center"
                                        Text="Number of Characters:" />
                                    <TextBox
                                        x:Name="txtPWLen"
                                        Width="42"
                                        Margin="5,2,5,5"
                                        Text="14" />
                                </StackPanel>
                                <StackPanel Margin="5,-8,5,5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkIncludeSpecial"
                                        Margin="5"
                                        Content="Special Characters"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkAvoidAmbig"
                                        Margin="10,6,10,5"
                                        Content="Avoid Ambiguous Characters"
                                        IsChecked="True" />
                                </StackPanel>
                            </StackPanel>
                            <Separator Margin="5,10,5,10" />
                            <!--  AD Groups Section  -->
                            <TextBlock
                                Margin="5"
                                FontWeight="Bold"
                                Text="AD Groups:" />
                            <ScrollViewer
                                Height="174"
                                Margin="5"
                                HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="icADGroups" Height="161">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="5" Content="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!--  Rechtes Panel: Admin Buttons, Logo und Dokumentenoptionen (Namen bleiben unverändert)  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,0,0,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="10">
                            <!--  Logo und Header  -->
                            <StackPanel
                                Height="69"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="{Binding HeaderLogo}" />
                                </StackPanel.Background>
                                <Image
                                    x:Name="picLogo"
                                    Width="225"
                                    Height="61"
                                    Margin="0,0,0,10"
                                    Stretch="Fill" />
                            </StackPanel>
                            <TextBlock Text="{Binding HeaderText}" TextAlignment="Center" Margin="0,5,0,10" />
                            <!--  Admin Buttons  -->
                            <Border Height="150" Background="Transparent" />
                            <!--  Upload & Document Options  -->
                            <StackPanel
                                HorizontalAlignment="Center"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <Button
                                    x:Name="btnUploadLogo"
                                    Width="180"
                                    Height="30"
                                    Margin="0,0,0,5"
                                    Content="Upload Onboarding LOGO" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Select Onboarding Documents:" />
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkHTML"
                                        Margin="5"
                                        Content="HTML"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkTXT"
                                        Margin="5"
                                        Content="TXT" />
                                </StackPanel>
                            </StackPanel>
                            <!--  Progress & Status  -->
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                                <ProgressBar
                                    x:Name="progressBar"
                                    Width="225"
                                    Height="20"
                                    Margin="0,23,0,5"
                                    Maximum="100"
                                    Minimum="0"
                                    Value="0" />
                                <TextBlock
                                    x:Name="lblStatus"
                                    HorizontalAlignment="Center"
                                    Text="Ready..." />
                            </StackPanel>
                            <!--  Onboard, PDF, Info, Close Buttons  -->
                            <StackPanel
                                Margin="10,10,10,10"
                                HorizontalAlignment="Center"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <Button
                                    x:Name="btnOnboard"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightGreen"
                                    Content="ONBOARDING" />
                                <Button
                                    x:Name="btnPDF"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightYellow"
                                    Content="CREATE PDF" />
                                <Button
                                    x:Name="btnInfo"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightBlue"
                                    Content="INFO" />
                                <Button
                                    x:Name="btnClose"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightCoral"
                                    Content="CLOSE" />
                            </StackPanel>
                            <TextBlock
                                x:Name="lblFooter"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Text="{Binding FooterWebseite}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!--  TAB 2: easyADUpdate  -->
            <TabItem x:Name="Tab_ADUpdate" Header="easyADUpdate" Margin="14,-2,-25,0">
                <Grid Margin="10" Background="#FFF3F3F3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Search Section  -->
                    <GroupBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,10"
                        Padding="5"
                        Background="#FFFBFBFB"
                        Header="User Search">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Text="Search Term:" />
                            <TextBox
                                x:Name="txtSearchADUpdate"
                                Grid.ColumnSpan="2"
                                Margin="77,0,207,0" />
                            <Button
                                x:Name="btnSearchADUpdate"
                                Grid.Column="1"
                                Margin="878,0,131,0"
                                Content="Search" />
                            <Button
                                x:Name="btnRefreshOU_Kopieren"
                                Grid.Column="1"
                                Height="25"
                                Margin="975,0,0,0"
                                Content="Refresh User List" />
                        </Grid>
                    </GroupBox>

                    <Grid Grid.Row="1" Grid.Column="0" Background="WhiteSmoke" Grid.ColumnSpan="2" Margin="0,10,589,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  User List (takes 2/3 of the space)  -->
                        <GroupBox
                            Grid.Row="0"
                            Margin="0,0,10,10"
                            Padding="5"
                            Background="#FFFBFBFB"
                            Header="User List">
                            <ListView x:Name="lstUsersADUpdate" Margin="0,0,6,0">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn
                                            Width="165"
                                            DisplayMemberBinding="{Binding DisplayName}"
                                            Header="Display Name" />
                                        <GridViewColumn
                                            Width="135"
                                            DisplayMemberBinding="{Binding SamAccountName}"
                                            Header="Username" />
                                        <GridViewColumn
                                            Width="225"
                                            DisplayMemberBinding="{Binding Email}"
                                            Header="Email" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>

                        <!--  Group Memberships (takes 1/3 of the space and aligned bottom right)  -->
                        <GroupBox
                            Grid.RowSpan="2"
                            Margin="0,408,10,10"
                            Background="#FFFBFBFB"
                            Header="Group Memberships">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="172*" />
                                    <ColumnDefinition Width="117*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="234,5,0,5"
                                    HorizontalAlignment="Left"
                                    Orientation="Horizontal" />
                                <ListBox
                                    x:Name="lstGroupsUpdate"
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="2"
                                    Width="445"
                                    Margin="113,0,0,5"
                                    HorizontalAlignment="Left" />
                                <Button
                                    x:Name="btnAddGroupUpdate"
                                    Grid.Row="1"
                                    Margin="10,39,244,71"
                                    Content="Add" />
                                <Button
                                    x:Name="btnRemoveGroupUpdate"
                                    Grid.Row="1"
                                    Margin="10,86,244,27"
                                    Content="Remove" />
                            </Grid>
                        </GroupBox>
                    </Grid>
                    <!--  User Properties  -->
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,0,0,10"
                        Padding="5"
                        Header="User Properties" Background="WhiteSmoke">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!--  Basic Info  -->
                                <GroupBox
                                    Margin="0,0,0,10"
                                    Background="#FFFBFBFB"
                                    Header="Basic Information">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="First Name:" />
                                        <TextBox
                                            x:Name="txtFirstNameUpdate"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Last Name:" />
                                        <TextBox
                                            x:Name="txtLastNameUpdate"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Display Name:" />
                                        <TextBox
                                            x:Name="txtDisplayNameUpdate"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Email:" />
                                        <TextBox
                                            x:Name="txtEmailUpdate"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Department:" />
                                        <TextBox
                                            x:Name="txtDepartmentUpdate"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />
                                    </Grid>
                                </GroupBox>

                                <!--  Contact Info  -->
                                <GroupBox
                                    Margin="0,0,0,10"
                                    Background="#FFFBFBFB"
                                    Header="Contact Information">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Phone:" />
                                        <TextBox
                                            x:Name="txtPhoneUpdate"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="37,5,0,5" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Mobile:" />
                                        <TextBox
                                            x:Name="txtMobileUpdate"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="37,5,0,5" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Office:" />
                                        <TextBox
                                            x:Name="txtOfficeUpdate"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="37,5,0,5" />
                                    </Grid>
                                </GroupBox>

                                <!--  Account Options  -->
                                <GroupBox
                                    Margin="0,0,0,10"
                                    Background="#FFFBFBFB"
                                    Header="Account Options">
                                    <StackPanel Margin="5" Orientation="Horizontal">
                                        <CheckBox
                                            x:Name="chkAccountEnabledUpdate"
                                            Margin="0,5,10,5"
                                            Content="Account Enabled" />
                                        <CheckBox
                                            x:Name="chkPasswordNeverExpiresUpdate"
                                            Margin="0,5,10,5"
                                            Content="Password Never Expires" />
                                        <CheckBox
                                            x:Name="chkMustChangePasswordUpdate"
                                            Margin="0,5,0,5"
                                            Content="Change Password at Next Logon" />
                                    </StackPanel>
                                </GroupBox>

                                <!--  Extended Options  -->
                                <GroupBox
                                    Margin="0,0,0,10"
                                    Background="#FFFBFBFB"
                                    Header="Extended Properties">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Manager:" />
                                        <TextBox
                                            x:Name="txtManagerUpdate"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Job Title:" />
                                        <TextBox
                                            x:Name="txtJobTitleUpdate"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Location:" />
                                        <TextBox
                                            x:Name="txtLocationUpdate"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Margin="0,5,10,5"
                                            Text="Employee ID:" />
                                        <TextBox
                                            x:Name="txtEmployeeIDUpdate"
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,5,0,5" />
                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!--  Action Buttons  -->
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnADUserUpdate"
                            Width="150"
                            Height="30"
                            Margin="0,0,20,0"
                            Background="LightGreen"
                            Content="Update User" />
                        <Button
                            x:Name="btnADUserCancel"
                            Width="150"
                            Height="30"
                            Background="Orange"
                            Content="GUI Reset" />
                        <Button
                            x:Name="btnADUserClose"
                            Width="150"
                            Height="30"
                            Background="LightCoral"
                            Content="Close" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--  TAB 3: Settings  -->
            <TabItem x:Name="Tab_INIEditor" Header="INIEditor" Margin="22,-2,-34,0">
                <Grid Background="#FFE8E8E8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  Liste der INI-Sektionen  -->
                    <ListView
                        x:Name="listViewINIEditor"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5,5,5,5"
                        Background="#FFFBFBFB"
                        SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="280"
                                    DisplayMemberBinding="{Binding SectionName}"
                                    Header="Abschnitt" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--  DataGrid für Einstellungen  -->
                    <DataGrid
                        x:Name="dataGridINIEditor"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5,5,5,5"
                        AutoGenerateColumns="False"
                        Background="#FFFBFBFB"
                        CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Key}"
                                Header="Key" />
                            <DataGridTextColumn
                                Width="250"
                                Binding="{Binding Value}"
                                Header="Value" />
                            <DataGridTextColumn
                                Width="400"
                                Binding="{Binding Comment}"
                                Header="Comment"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--  Buttons für Settings  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnINIEditorSaveChanges"
                            Width="111"
                            Height="40"
                            Background="LightGreen"
                            Content="Save Changes" />
                        <Button
                            x:Name="btnINIEditorInfo"
                            Width="65"
                            Height="40"
                            Margin="5,0,5,0"
                            Background="LightBlue"
                            Content="Info" />
                        <Button
                            x:Name="btnINIEditorClose"
                            Width="98"
                            Height="40"
                            Margin="5,0,5,0"
                            Background="LightCoral"
                            Content="Close" />
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>