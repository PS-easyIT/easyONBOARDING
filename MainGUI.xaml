<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding APPName}"
    Width="1225"
    Height="800"
    Background="{Binding ThemeColor}">
    <!--  Hauptcontainer: Grid, der den TabControl-Bereich umschließt  -->
    <Grid Margin="0,0,0,37" Background="{Binding BackgroundImage}">
        <!--  TabControl mit allen Hauptfunktionen  -->
        <TabControl x:Name="MainTabControl" Margin="10,10,10,-28">
            <!--  TAB 1: easyONBOARDING  -->
            <TabItem x:Name="Tab_Onboarding" Header="easyONBOARDING">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <!--  Linkes Panel  -->
                        <ColumnDefinition Width="420" />
                        <!--  Mittleres Panel (eindeutige Namen mit Suffix _Onb)  -->
                        <ColumnDefinition Width="450" />
                        <!--  Rechtes Panel (eindeutige Namen mit Suffix _Onb2)  -->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="700" />
                    </Grid.RowDefinitions>

                    <!--  Linkes Panel: Eingabeformular für Onboarding-Daten  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="5,5,5,-9">
                            <!--  OU Auswahl und Refresh  -->
                            <Grid Margin="5" Background="#FFFFF6E9">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Select OU:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <ComboBox
                                    x:Name="cmbOU"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center" />
                                <Button
                                    x:Name="btnRefreshOU"
                                    Grid.Column="2"
                                    Height="25"
                                    Width="80"
                                    Margin="0,0,0,0"
                                    Content="Refresh" />
                            </Grid>
                            <!--  First Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="First Name *:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtFirstName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Last Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Last Name *:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtLastName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  External Employee Checkbox  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="External Employee:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <CheckBox
                                    x:Name="chkExternal"
                                    Grid.Column="1"
                                    Margin="2,0,0,0"
                                    VerticalAlignment="Center" />
                            </Grid>
                            <Separator Margin="5" />
                            <!--  Display Name  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Display Name:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtDisplayName"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  UPN Template Auswahl  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Template:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <ComboBox
                                    x:Name="cmbDisplayTemplate"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="51,0,0,0"
                                    VerticalAlignment="Center">
                                    <ComboBoxItem Content="Template1" />
                                    <ComboBoxItem Content="Template2" />
                                </ComboBox>
                            </Grid>
                            <!--  Description  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Description:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtDescription"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Office  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Office:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtOffice"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Phone  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Phone:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtPhone"
                                    Grid.Column="1"
                                    Width="281"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Mobile  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Mobile:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtMobile"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Position  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Position:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtPosition"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Department  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Department:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtDepartment"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Termination Date  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Termination Date:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <TextBox
                                    x:Name="txtTermination"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Right" />
                            </Grid>
                            <!--  Hinweis  -->
                            <Border Height="20" Background="Transparent">
                                <TextBlock
                                    Width="268"
                                    Margin="103,-3,5,7"
                                    FontStyle="Italic"
                                    Text="Not effective when disabled!" />
                            </Border>
                            <!--  Location Auswahl  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Location *:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <ComboBox
                                    x:Name="cmbLocation"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Bez"
                                    ItemsSource="{Binding LocationListFromINI}"
                                    SelectedValuePath="Key" />
                            </Grid>
                            <!--  MS365 License Auswahl  -->
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                Text="-" />
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="MS365 License *:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <ComboBox
                                    x:Name="cmbLicense"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding LicenseListFromINI}"
                                    SelectedValuePath="Value" />
                            </Grid>
                            <Border Height="126" Background="Transparent" />
                            <!--  Team Leader & Department Head Einstellungen  -->
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <CheckBox
                                    x:Name="chkTL"
                                    Grid.Column="0"
                                    Margin="108,0,10,0"
                                    VerticalAlignment="Center"
                                    Content="Team Leader (TL)" />
                                <CheckBox
                                    x:Name="chkAL"
                                    Grid.Column="1"
                                    Margin="23,0,10,0"
                                    VerticalAlignment="Center"
                                    Content="Department Head (AL)" />
                            </Grid>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="TL Group:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <ComboBox
                                    x:Name="cmbTLGroup"
                                    Grid.Column="1"
                                    Width="280"
                                    MinWidth="200"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Value"
                                    ItemsSource="{Binding TLGroupOptions}"
                                    SelectedValuePath="Value" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Mittleres Panel: UPN Template, Email & AD Settings  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,10,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="10">
                            <StackPanel Margin="5" Orientation="Vertical">
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Text="UPN Template:" />
                                <!--  Eindeutiger Name für dieses Element  -->
                                <TextBlock
                                    x:Name="txtUPNTemplateDisplay"
                                    Width="302"
                                    MinWidth="200"
                                    Margin="5,-20,5,5"
                                    HorizontalAlignment="Right"
                                    Text="FIRSTNAME.LASTNAME@company.com" />
                                <Separator Margin="5,10,5,10" />
                            </StackPanel>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Email Address:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <!--  Eindeutiger Name  -->
                                <TextBox
                                    x:Name="txtEmail"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="41,0,0,0"
                                    VerticalAlignment="Center" />
                            </Grid>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Text="Mail Suffix:"
                                    FontFamily="{Binding FontFamily}"
                                    FontSize="{Binding FontSize}" />
                                <!--  Eindeutiger Name  -->
                                <ComboBox
                                    x:Name="cmbSuffix"
                                    Grid.Column="1"
                                    MinWidth="200"
                                    Margin="60,0,0,0"
                                    VerticalAlignment="Center"
                                    DisplayMemberPath="Value"
                                    ItemsSource="{Binding MailSuffixListFromINI}"
                                    SelectedValuePath="Key" />
                            </Grid>
                            <Separator Margin="5,10,5,10" />
                            <!--  AD User Account Settings  -->
                            <StackPanel
                                Margin="5"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <TextBlock FontWeight="Bold" Text="AD User Account Settings" />
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkAccountDisabled"
                                        Margin="5"
                                        Content="Account Disabled"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkPWNeverExpires"
                                        Margin="5"
                                        Content="Password Never Expires" />
                                </StackPanel>
                                <TextBlock
                                    Width="268"
                                    Height="16"
                                    Margin="-114,10,0,0"
                                    FontStyle="Italic"
                                    Text="Not effective when disabled!" />
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkSmartcardLogon"
                                        Margin="5"
                                        Content="Smartcard Logon" />
                                    <CheckBox
                                        x:Name="chkPreventPWChange"
                                        Margin="8,5,5,5"
                                        Content="Prevent Password Change" />
                                </StackPanel>
                                <CheckBox
                                    x:Name="chkPWChangeLogon"
                                    Margin="11,5,5,5"
                                    Content="Change Password at Logon" />
                            </StackPanel>
                            <Separator Margin="5,10,5,10" />
                            <!--  Password Options  -->
                            <StackPanel
                                Margin="5"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <TextBlock FontWeight="Bold" Text="Password Options" />
                                <StackPanel Margin="57,-14,5,5" Orientation="Horizontal">
                                    <RadioButton
                                        x:Name="rbFix"
                                        Margin="100,-1,1,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="FIXED" />
                                    <RadioButton
                                        x:Name="rbRand"
                                        Margin="13,-1,1,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="GENERATED"
                                        IsChecked="True" />
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5"
                                        VerticalAlignment="Center"
                                        Text="Fixed Password:" />
                                    <TextBox
                                        x:Name="txtFixPW"
                                        Width="200"
                                        Margin="5"
                                        IsEnabled="False" />
                                </StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="5,2,5,5"
                                        VerticalAlignment="Center"
                                        Text="Number of Characters:" />
                                    <TextBox
                                        x:Name="txtPWLen"
                                        Width="50"
                                        Margin="5,2,5,5"
                                        Text="14" />
                                </StackPanel>
                                <StackPanel Margin="5,-8,5,5" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkIncludeSpecial"
                                        Margin="5"
                                        Content="Special Characters"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkAvoidAmbig"
                                        Margin="10,6,10,5"
                                        Content="Avoid Ambiguous Characters"
                                        IsChecked="True" />
                                </StackPanel>
                            </StackPanel>
                            <Separator Margin="5,10,5,10" />
                            <!--  AD Groups Section  -->
                            <TextBlock
                                Margin="5"
                                FontWeight="Bold"
                                Text="AD Groups:" />
                            <ScrollViewer
                                Height="172"
                                Margin="5"
                                HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="icADGroups">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="3" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="5" Content="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!--  Rechtes Panel: Admin Buttons, Logo und Dokumentenoptionen (Namen bleiben unverändert)  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,0,0,10"
                        Background="WhiteSmoke"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="10">
                            <!--  Logo und Header  -->
                            <StackPanel
                                Height="69"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="C:/easyIT/DATA/easyONBOARDING-GUIICON-V2.png" />
                                </StackPanel.Background>
                                <Image
                                    x:Name="picLogo"
                                    Width="225"
                                    Height="61"
                                    Margin="0,0,0,10"
                                    Stretch="Fill" />
                            </StackPanel>
                            <!--  Admin Buttons  -->
                            <Border Height="174" Background="Transparent" />
                            <!--  Upload & Document Options  -->
                            <StackPanel
                                HorizontalAlignment="Center"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <Button
                                    x:Name="btnUploadLogo"
                                    Width="180"
                                    Height="30"
                                    Margin="0,0,0,5"
                                    Content="Upload Onboarding LOGO" />
                                <TextBlock
                                    Margin="0,10,0,5"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Select Onboarding Documents:" />
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="chkHTML"
                                        Margin="5"
                                        Content="HTML"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="chkTXT"
                                        Margin="5"
                                        Content="TXT" />
                                </StackPanel>
                            </StackPanel>
                            <!--  Progress & Status  -->
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Center"
                                Orientation="Vertical">
                                <ProgressBar
                                    x:Name="progressBar"
                                    Width="225"
                                    Height="20"
                                    Margin="0,23,0,5"
                                    Maximum="100"
                                    Minimum="0"
                                    Value="0" />
                                <TextBlock
                                    x:Name="lblStatus"
                                    HorizontalAlignment="Center"
                                    Text="Ready..." />
                            </StackPanel>
                            <!--  Onboard, PDF, Info, Close Buttons  -->
                            <StackPanel
                                Margin="10,10,10,10"
                                HorizontalAlignment="Center"
                                Background="#FFFBFBFB"
                                Orientation="Vertical">
                                <Button
                                    x:Name="btnOnboard"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightGreen"
                                    Content="ONBOARDING" />
                                <Button
                                    x:Name="btnPDF"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightYellow"
                                    Content="CREATE PDF" />
                                <Button
                                    x:Name="btnInfo"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightBlue"
                                    Content="INFO" />
                                <Button
                                    x:Name="btnClose"
                                    Width="225"
                                    Height="40"
                                    Margin="5"
                                    Background="LightCoral"
                                    Content="CLOSE" />
                            </StackPanel>
                            <TextBlock
                                x:Name="lblFooter"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Text="www.PSscripts.de" />
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <!--  TAB 2: easyADUpdate  -->
            <TabItem x:Name="Tab_ADUpdate" Header="easyADUpdate">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Search Section -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Header="User Search" Margin="0,0,0,10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Search Term:" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBox Grid.Column="1" x:Name="txtSearchADUpdate" Margin="0,0,10,0" />
                            <Button Grid.Column="2" x:Name="btnSearchADUpdate" Content="Search" Width="80" />
                        </Grid>
                    </GroupBox>

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <!-- User List (takes 2/3 of the space) -->
                        <GroupBox Grid.Row="0" Header="User List" Margin="0,0,5,10" Padding="5">
                                <ListView x:Name="lstUsersADUpdate" Margin="0,5,0,5">
                                        <ListView.View>
                                                <GridView>
                                                        <GridViewColumn Header="Display Name" DisplayMemberBinding="{Binding DisplayName}" Width="150" />
                                                        <GridViewColumn Header="Username" DisplayMemberBinding="{Binding SamAccountName}" Width="100" />
                                                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="170" />
                                                </GridView>
                                        </ListView.View>
                                </ListView>
                        </GroupBox>
                        
                        <!-- Group Memberships (takes 1/3 of the space and aligned bottom right) -->
                        <GroupBox Grid.Row="1" Header="Group Memberships" Margin="0,0,0,5">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right">
                                                <Button x:Name="btnAddGroupUpdate" Content="Add" Width="90" Margin="0,0,10,0" />
                                                <Button x:Name="btnRemoveGroupUpdate" Content="Remove" Width="90" />
                                        </StackPanel>
                                        <ListBox Grid.Row="1" x:Name="lstGroupsUpdate" Margin="0,5,0,5" />
                                </Grid>
                        </GroupBox>
                    </Grid>
                    <!-- User Properties -->
                    <GroupBox Grid.Row="1" Grid.Column="1" Header="User Properties" Margin="5,0,0,10" Padding="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Basic Info -->
                                <GroupBox Header="Basic Information" Margin="0,0,0,10">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFirstNameUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Name:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLastNameUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Display Name:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtDisplayNameUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtEmailUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Department:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtDepartmentUpdate" Margin="0,5,0,5" />
                                    </Grid>
                                </GroupBox>

                                <!-- Contact Info -->
                                <GroupBox Header="Contact Information" Margin="0,0,0,10">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Phone:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtPhoneUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Mobile:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtMobileUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Office:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtOfficeUpdate" Margin="0,5,0,5" />
                                    </Grid>
                                </GroupBox>

                                <!-- Account Options -->
                                <GroupBox Header="Account Options" Margin="0,0,0,10">
                                    <StackPanel Margin="5" Orientation="Horizontal">
                                        <CheckBox x:Name="chkAccountEnabledUpdate" Content="Account Enabled" Margin="0,5,10,5" />
                                        <CheckBox x:Name="chkPasswordNeverExpiresUpdate" Content="Password Never Expires" Margin="0,5,10,5" />
                                        <CheckBox x:Name="chkMustChangePasswordUpdate" Content="Change Password at Next Logon" Margin="0,5,0,5" />
                                    </StackPanel>
                                </GroupBox>

                                <!-- Extended Options -->
                                <GroupBox Header="Extended Properties" Margin="0,0,0,10">
                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Manager:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtManagerUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Job Title:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtJobTitleUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Location:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtLocationUpdate" Margin="0,5,0,5" />

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Employee ID:" Margin="0,5,10,5" />
                                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtEmployeeIDUpdate" Margin="0,5,0,5" />
                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Button x:Name="btnADUserUpdate" Content="Update User" Width="150" Height="30" Background="LightGreen" Margin="0,0,20,0" />
                        <Button x:Name="btnADUserCancel" Content="Cancel" Width="100" Height="30" Background="LightCoral" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <!--  TAB 3: easyADGroups  -->
            <TabItem x:Name="Tab_ADGroups" Header="easyADGroups">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Main Panel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <Grid Margin="0,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- OU Selection Panel -->
                                <GroupBox Grid.Column="0" Padding="5" HorizontalAlignment="Stretch">
                                    <GroupBox.Header>
                                        <TextBlock Text="OU Selection" FontWeight="Bold" Foreground="DarkBlue" />
                                    </GroupBox.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ComboBox x:Name="comboBoxOU" Margin="0,5,5,5" 
                                                  Width="450"
                                                  DisplayMemberPath="Name" SelectedValuePath="DN" />
                                        <Button x:Name="btnRefreshOUSelection" Margin="5,5,0,5" 
                                                Content="Refresh" Width="75" />
                                    </StackPanel>
                                </GroupBox>

                                <!-- Group Creation Panel -->
                                <GroupBox Grid.Column="1" Padding="5" HorizontalAlignment="Stretch">
                                    <GroupBox.Header>
                                        <TextBlock Text="Group Name" FontWeight="Bold" Foreground="DarkBlue" />
                                    </GroupBox.Header>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBox x:Name="textBoxPrefix" Margin="0,5,0,5" Width="540"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <GroupBox Grid.Column="0" Margin="0,0,10,0" Padding="5">
                                    <GroupBox.Header>
                                        <TextBlock Text="Create Options" FontWeight="Bold" Foreground="DarkBlue" />
                                    </GroupBox.Header>
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Row 0 - Labels -->
                                            <Label Grid.Column="0" Grid.Row="0" Content="Separator:" FontWeight="Bold" Margin="0,0,10,0" />
                                            <Label Grid.Column="1" Grid.Row="0" Content="Start Number:" FontWeight="Bold" Margin="0,0,10,0" />
                                            <Label Grid.Column="2" Grid.Row="0" Content="End Number:" FontWeight="Bold" />
                                            
                                            <!-- Row 1 - Inputs -->
                                            <TextBox Grid.Column="0" Grid.Row="1" x:Name="textBoxSeparator" Text="-" Width="60" HorizontalAlignment="Left" Margin="0,0,10,0" />
                                            <TextBox Grid.Column="1" Grid.Row="1" x:Name="textBoxStart" Width="100" HorizontalAlignment="Left" Margin="0,0,10,0" />
                                            <TextBox Grid.Column="2" Grid.Row="1" x:Name="textBoxEnd" Width="100" HorizontalAlignment="Left" />
                                        </Grid>
                                        
                                        <StackPanel Margin="0,10,0,0">
                                            <Label Content="Description:" FontWeight="Bold" />
                                            <TextBox x:Name="textBoxDescription" HorizontalAlignment="Stretch" />
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox Grid.Column="1" Margin="0,0,10,0" Padding="5">
                                    <GroupBox.Header>
                                        <TextBlock Text="Group Options" FontWeight="Bold" Foreground="DarkBlue" />
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Group Type -->
                                        <Label Grid.Row="0" Content="Group Type:" FontWeight="Bold" />
                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <RadioButton x:Name="radioSecurity" Content="Security" IsChecked="True" Margin="0,0,10,0" />
                                            <RadioButton x:Name="radioDistribution" Content="Distribution" />
                                        </StackPanel>
                                        
                                        <!-- Scope -->
                                        <Label Grid.Row="2" Content="Scope:" FontWeight="Bold" Margin="0,10,0,0" />
                                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                                            <RadioButton x:Name="radioGlobal" Content="Global" IsChecked="True" Margin="0,0,10,0" />
                                            <RadioButton x:Name="radioUniversal" Content="Universal" Margin="0,0,10,0" />
                                            <RadioButton x:Name="radioDomainLocal" Content="DomainLocal" />
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Grid.Column="2" Padding="5">
                                    <GroupBox.Header>
                                        <TextBlock Text="Special Settings" FontWeight="Bold" Foreground="DarkBlue" />
                                    </GroupBox.Header>
                                    <StackPanel>
                                        <CheckBox x:Name="chkSpecial" Content="JIRA / Confluence Group(s) - (Suffix from INI)" Margin="0,5,0,5" />
                                    </StackPanel>
                                </GroupBox>
                            </Grid>

                            <!-- Members Panel -->
                            <GroupBox Margin="0,10,0,0" Padding="5">
                                <GroupBox.Header>
                                    <TextBlock Text="Members" FontWeight="Bold" Foreground="DarkBlue" />
                                </GroupBox.Header>
                                <StackPanel>
                                    <ListBox x:Name="listBoxUsers" Height="320" Margin="0,5,0,5" 
                                             SelectionMode="Extended" Background="LightGray" Foreground="DarkBlue" />
                                </StackPanel>
                            </GroupBox>

                            <!-- Button Panel -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                <Button x:Name="buttonADGroupPreview" Content="Preview" Width="90" Height="20" Margin="0,0,10,0" Background="LightBlue" />
                                <Button x:Name="buttonADGroupCreate" Content="Create" Width="90" Height="20" Margin="10,0,10,0" Background="LightGreen" />
                                <Button x:Name="buttonADGroupClose" Content="Close" Width="90" Height="20" Margin="10,0,0,0" Background="LightCoral" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Panel -->
                    <Border
                        Grid.Row="2"
                        Background="#F0F0F0"
                        BorderBrush="DarkGray"
                        BorderThickness="0,1,0,0" 
                        Height="30">
                        <DockPanel Margin="10,0">
                            <TextBlock x:Name="linkLabel" DockPanel.Dock="Left" VerticalAlignment="Center">
                                <Hyperlink x:Name="hyperlinkWebsite" NavigateUri="https://phinit.de">
                                    https://phinit.de
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock x:Name="footerInfo" DockPanel.Dock="Right" VerticalAlignment="Center" FontSize="10" />
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!--  TAB 4: Settings  -->
            <TabItem x:Name="Tab_INIEditor" Header="INIEditor">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  Liste der INI-Sektionen  -->
                    <ListView
                        x:Name="listViewINIEditor"
                        Grid.Column="0"
                        Grid.Row="0"
                        Margin="5,5,5,5"
                        SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="280"
                                    DisplayMemberBinding="{Binding SectionName}"
                                    Header="Abschnitt" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--  DataGrid für Einstellungen  -->
                    <DataGrid
                        x:Name="dataGridINIEditor"
                        Grid.Column="1"
                        Grid.Row="0"
                        Margin="5,5,5,5"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding Key}"
                                Header="Key" />
                            <DataGridTextColumn
                                Width="400"
                                Binding="{Binding Value}"
                                Header="Value" />
                            <DataGridTextColumn
                                Width="285"
                                Binding="{Binding Comment}"
                                Header="Comment"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--  Buttons für Settings  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btnINIEditorSaveChanges"
                            Width="111"
                            Height="40"
                            Background="LightGreen"
                            Content="Save Changes" />
                        <Button
                            x:Name="btnINIEditorInfo"
                            Width="65"
                            Height="40"
                            Margin="5,0,5,0"
                            Background="LightBlue"
                            Content="Info" />
                        <Button
                            x:Name="btnINIEditorClose"
                            Width="98"
                            Height="40"
                            Margin="5,0,5,0"
                            Background="LightCoral"
                            Content="Close" />
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>